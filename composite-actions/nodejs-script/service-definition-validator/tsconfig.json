{
  "compilerOptions": {
    "target": "ES2020",                         // Target ECMAScript version
    "module": "ESNext",                         // Use ES modules
    "lib": ["ES2020"],
    "outDir": "./dist",                         // Output directory
    "rootDir": "./src",                         // Root source directory
    "strict": true,                             // Enable all strict type-checking options
    "moduleResolution": "bundler",              // Module resolution strategy
    "esModuleInterop": true,                    // Enables emit interoperability between CommonJS and ES Modules
    "skipLibCheck": true,                       // Skip type checking of declaration files
    "forceConsistentCasingInFileNames": true,   // Ensure consistent casing in imports
    "resolveJsonModule": true,                  // Enable importing JSON modules
    "allowImportingTsExtensions": true,         // Allow importing TypeScript files
    "noEmit": false,                            // Do not emit output
  },
  "include": ["src"],
  "exclude": ["node_modules", "dist"]
}